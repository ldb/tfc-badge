<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="{{.Width}}" height="20">
    <title>Terraform: {{.Message}}</title>
    <a href="{{.URL}}">
        <linearGradient id="s" x2="0" y2="100%">
            <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
            <stop offset="1" stop-opacity=".1"/>
        </linearGradient>
        <clipPath id="r">
            <rect width="{{.Width}}" height="20" rx="3" fill="#fff"/>
        </clipPath>
        <g clip-path="url(#r)">
            <rect width="82" height="20" fill="#555"/>
            <rect x="82" width="{{.Width}}" height="20" fill="{{.Color}}"/>
            <rect width="{{.Width}}" height="20" fill="url(#s)"/>
        </g>
        <g fill="#fff" font-family="Verdana,Geneva,DejaVu Sans,sans-serif"
           text-rendering="geometricPrecision" font-size="110">
            <image x="5" y="3" width="14" height="14"
                   xlink:href="data:image/svg+xml;base64,"/>
            <text x="220" y="140" transform="scale(.1)" fill="#fff">Terraform</text>
            <text x="900" y="140" transform="scale(.1)" fill="#fff">{{.Message}}</text>
        </g>
    </a>
</svg>
